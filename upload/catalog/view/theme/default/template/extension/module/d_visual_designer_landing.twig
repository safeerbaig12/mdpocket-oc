{{header}}
<script type="text/javascript">
    document.variation_id = {{variation_id}}
</script>
<div class="container">
    {% if header_status %}
        <ul class="breadcrumb">
            {% for breadcrumb in breadcrumbs %}
                <li>
                    <a href="{{breadcrumb.href}}">{{breadcrumb.text}}</a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
    {% if full_width %}
        </div>
    {% endif %}
    {% if permission %}
        <ul class="nav nav-tabs">
            {% for variation in variations %}
                <li {{variation.active?'class="active"'}}>
                <a href="{{variation.link}}">{{variation.character}}</a>
            </li>
            {% endfor %}
        </ul>
    {% endif %}
<div class="row">
    <div id="content" class="col-md-12">
        {% if display_title %}
            <h1>{{heading_title}}</h1>
        {% endif %}

        {{description}}
    </div>
</div>
{% if not full_width %}
    </div>
{% endif %}
{{footer}}